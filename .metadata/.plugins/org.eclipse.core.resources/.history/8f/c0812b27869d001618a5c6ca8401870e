    /**
     * initializes drivetrain subsystem by inverting all motors
     */
    public void initialize() {
    	frontLeftMotor.setInverted(true);
    	rearLeftMotor.setInverted(true);
    	frontRightMotor.setInverted(true);
    	rearRightMotor.setInverted(true);
    }
    
    /**
     * sets left drivetrain motors (frontLeftMotor and rearLeftMotor) 
     * to the given speed if speed is within safe operating range
     * 
     * @param speed - speed at which to run the motors at, from -1 to 1 inclusive
     */
    public void setLeftDrive(double speed) {
    	if (Math.abs(speed) <= 1) {
    		frontLeftMotor.set(speed);
    		rearLeftMotor.set(speed);
    	}
    	else if (speed < 0) {
    		frontLeftMotor.set(-1);
    		rearLeftMotor.set(-1);
    	}
    	else if (speed > 0) {
    		frontLeftMotor.set(1);
    		rearLeftMotor.set(1);
    	}
    }
    
    /**
     * sets right drivetrain motors (frontRightMotor and rearRightMotor) 
     * to the given speed if speed is within safe operating range
     * 
     * @param speed - speed at which to run the motors at, from -1 to 1 inclusive
     */
    public void setRightDrive(double speed) {
    	if (Math.abs(speed) <= 1) {
    		frontRightMotor.set(speed);
    		rearRightMotor.set(speed);
    	}
    	else if (speed < 0) {
    		frontRightMotor.set(-1);
    		rearRightMotor.set(-1);
    	}
    	else if (speed > 0) {
    		frontRightMotor.set(1);
    		rearRightMotor.set(1);
    	}
    }
    
    public void stop() {
    	setLeftDrive(0);
    	setRightDrive(0);
    }
