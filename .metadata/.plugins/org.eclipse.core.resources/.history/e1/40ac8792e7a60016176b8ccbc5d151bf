    /**
     *  sets both slave and master motor to set speed
     */
    public void setMotors(double speed) {
    	slaveMotor.set(speed);
    	masterMotor.set(speed);
    }
    
    /**
     * @return master motor speed
     */
    public double getMasterValue() {
    	return masterMotor.get();
