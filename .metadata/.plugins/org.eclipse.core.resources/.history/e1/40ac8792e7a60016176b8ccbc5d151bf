    public void resetEncoder() {
    	masterMotor.setEncPosition(0);
    }
    
    /**
     * sets brake mode (true = brake, false = coast)
     */
    public void setBrake(boolean brake) {
    	masterMotor.enableBrakeMode(brake);
    }
    
    /**
